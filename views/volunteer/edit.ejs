<% layout('layouts/boilerplate')%>

<div class='row'>
    <h1 class="text-center">Edit Volunteer</h1>
    <div class="col-6 offset-3">
    <form action="/volunteer/<%=volunteer._id%>?_method=PUT" method="post" novalidate class="row g-3 validated-form" >
      <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Enter name" name="volunteer[name]" value="<%= volunteer.name %>">
      </div>
      <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" placeholder="Enter email" name="volunteer[email]" value="<%=volunteer.email %>">
      </div>
      <div class="mb-3">
          <label for="phone" class="form-label">Contact No.</label>
          <input type="number" class="form-control" id="phone" placeholder="Enter contact no." name="volunteer[phone]" value="<%=volunteer.phone %>">
      </div>
      <div class="mb-3">
          <label for="gender" class="mb-2">Gender</label>
          <div>
            <input type="radio" class="form-check-input" id="male" name="volunteer[gender]"   value="<%= volunteer.gender %>" checked >
            <label for="male">Male</label>
          </div>
          <div>
            <input type="radio" class="form-check-input" id="female" name="volunteer[gender]"  value="<%= volunteer.gender %>"
            >
            <label for="female">Female</label>
          </div>
          <div>
            <input type="radio" class="form-check-input" id="other" name="volunteer[gender]"  value="<%= volunteer.gender %>"  >
            <label for="other">Other</label>
          </div>
         
      </div>
      <div class="mb-3">
          <label for="dob" class="form-label">DOB</label>
          <input type="date" class="form-control" id="dob" placeholder="Enter DOB" name="volunteer[dob]" value="<%= volunteer.dob %>">
      </div>
      <div class="mb-3">
          <label for="occupation" class="form-label">Occupation</label>
          <div>
            <input type="radio" class="form-check-input" id="student" name="volunteer[occupation]" value="<%= volunteer.occupation %>">
            <label class="form-check-label" for="student">Student</label>
          </div>
          <div>
            <input type="radio" class="form-check-input" id="employed" name="volunteer[occupation]" value="<%= volunteer.occupation %>">
            <label class="form-check-label" for="employed">Employed</label>
          </div>
          <div>
            <input type="radio" class="form-check-input" id="unemployed" name="volunteer[occupation]" value="<%= volunteer.occupation %>">
            <label  class="form-check-label" for="unemployed">Unemployed</label>
          </div>
          <div>
            <input type="radio" class="form-check-input" id="other" name="volunteer[occupation]" value="<%= volunteer.occupation %>">
            <label  class="form-check-label" for="other">Other</label>
          </div>         
      </div>
      <div class="mb-3">
          <label for="city" class="form-label">City</label>
          <input type="text" class="form-control" id="city" placeholder="Enter city" name="volunteer[city]" value="<%=volunteer.city%>">
      </div>
      <div class="mb-3">
          <label for="state" class="form-label">State</label>
          <input type="text" class="form-control" id="state" placeholder="Enter state" name="volunteer[state]" value="<%=volunteer.state %>">
      </div>
      <div class="mb-3">
          <label for="fieldInterest" class="mb-2">Field of Interest</label>
      
          <div>
            <input type="checkbox" class="form-check-input" id="content_writing" name="volunteer[fieldInterest]" value="<%=volunteer.fieldInterest %>">
            <label class="form-check-label" for="content_writing">Content Writing</label>
          </div>
         
          <div>
            <input type="checkbox" class="form-check-input" id="fund_raising" name="volunteer[fieldInterest]" value="<%=volunteer.fieldInterest %>">
            <label class="form-check-label" class="form-check-label" for="fund_raising">Fund Raising</label>
          </div>
         
          <div>
            <input type="checkbox" class="form-check-input" id="field_work" name="volunteer[fieldInterest]" value="<%= volunteer.fieldInterest %>">
            <label class="form-check-label" for="field_work">Field Work</label>
          </div>
         
          <div>
            <input type="checkbox" class="form-check-input" id="disaster_relief" name="volunteer[fieldInterest]" value="<%= volunteer.fieldInterest %>">
            <label class="form-check-label" for="disaster_relief">Disaster Relief</label>
          </div>
      </div>
      <div class="d-flex justify-content-center mb-5">
          <button class="btn btn-success">Edit Volunteer</button> 
      </div>    
    </form>
</div>
